{
	"$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/packages/cspell-types/cspell.schema.json",
	"version": "0.2",
	"import": [
		"${env:XDG_CONFIG_HOME}/vscode/cspell.config.json"
	],
	"language": "en",
	"caseSensitive": true,
	"dictionaryDefinitions": [
		{
			"name": "textlint-dic",
			"description": "dictionary for textlint plugins, filename, settings",
			"path": "./cspell/dicts/textlint.dic",
			"addWords": false,
			"scope": "user"
		},
		{
			"name": "zenn-dic",
			"description": "dictionary for zenn.dev",
			"path": "./cspell/dicts/zenn-dev.dic",
			"addWords": true,
			"scope": "workspace"
		}
	],
	"dictionaries": [
		"en",
		"User-dic",
		"textlint-dic",
		"zenn-dic"
	]
}
